
@model List<VienShops.Models.Cart>

<div class="container_fullwidth">
	<div class="container shopping-cart">
		<div class="row">
			<div class="col-md-12">
				<h3 class="title">
					Giỏ hàng
				</h3>
				<div class="clearfix">
				</div>
				<table class="shop-table">
					<thead>
						<tr>
							<th>
								Hình ảnh
							</th>
							<th>
								Chi tiết
							</th>
							<th>
								Giá
							</th>
							<th>
								Số lượng
							</th>
							<th>
								Tổng tiền
							</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									<img src="~/images/products/small/@item.sUrlHinh" alt="">
								</td>
								<td>
									<div class="shop-details">
										<div class="productname">
											@item.sTenSP
										</div>
										<p>
											Chất liệu :
											<strong class="light-red">
												@item.cChatLieu
											</strong>
										</p>
									</div>
								</td>
								<td>
									<h5>
										@String.Format("{0:0,0}", @item.dDonGia) VND
									</h5>
								</td>
								<td>
									<strong>@item.iSoLuong</strong>
								</td>
								<td>
									<h5>
										<strong class="red">
											@String.Format("{0:0,0}", @item.dThanhTien) VND
										</strong>
									</h5>
								</td>

							</tr>
						}

					</tbody>
				</table>
				<div class="clearfix">
				</div>
			</div>
		</div>
		<div class="clearfix">

		</div>
	</div>
</div>

